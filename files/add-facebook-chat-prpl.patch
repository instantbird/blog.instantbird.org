+		}
+	}
+
+	feed_url = g_strndup(feed_url, strchr(feed_url, '"') - feed_url);
+
+	/* convert &amp; to & */
+	stripped = purple_unescape_html(feed_url);
+	g_free(feed_url);
+	/* strip the host and protocol off url */
+	feed_url = g_strdup(strstr(stripped, "/feeds"));
