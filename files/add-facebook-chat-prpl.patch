+void fb_add_buddy(PurpleConnection *pc, PurpleBuddy *buddy, PurpleGroup *group)
+{
+	gchar *postdata;
+	gchar *url;
+	FacebookAccount *fba = pc->proto_data;
+	gchar *buddy_tmp;
+
+	if (!purple_account_get_bool(
