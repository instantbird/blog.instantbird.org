+	time_t time_of_message;
+	time_t newest_message = 0;
+	gchar *tmp;
+	gchar month_string[4], weekday[4];
+	guint year, month, day, hour, minute, second;
+	long timezone;
+	gchar *subject, *url, *stripped_subject;
