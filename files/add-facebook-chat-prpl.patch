+	if (purple_account_get_bool(
+			fba->account, "facebook_manage_friends", FALSE)) {
+		fb_post_or_get(fba, FB_METHOD_GET, NULL, "/reqs.php", NULL,
+				fb_check_friend_request_cb, NULL, FALSE);
+	}
+
+	return TRUE;
+}
